<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="1.6">
	<name>Pvoks</name>
	<creationDate>2016-12-19</creationDate>
	<author>Fogler Tibor</author>
	<authorEmail>tibor.fogler@gmail.com</authorEmail>
	<authorUrl>https://github.com/utopszkij</authorUrl>
	<copyright>Copyright (C) 2016 Fogler Tibor Open Source Matters. All rights reserved.</copyright>	
	<license>GNU/GPL</license>
	<version>1.00</version>
	<description>voks by borda system. Condorcet processing, liqued democracy</description>

	<files folder="site">
			<filename>pvoks.php</filename>
			<filename>condorcet.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>			
			<folder>controllers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>helpers</folder>
			<folder>views</folder>
			<folder>assets</folder>			
	</files>	
	<languages folder="site">
		<language tag="hu-HU">language/hu-HU.com_pvoks.ini</language>
	</languages>
	<administration>
		<menu link="index.php?option=com_pvoks">Pvoks</menu>
		<files folder="admin">
			<filename>pvoks.php</filename>
			<filename>index.html</filename>			
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>assets</folder>			
			<folder>sql</folder>			
		</files>
		<languages folder="admin">
			<language tag="hu-HU">language/hu-HU.com_pvoks.ini</language>
		</languages>
	</administration>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/install.sql</file>
			<file driver="mysqli" charset="utf8">sql/install/mysql/install.sql</file>
		</sql>
	</install>

	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/uninstall.sql</file>
			<file driver="mysqli" charset="utf8">sql/uninstall/mysql/uninstall.sql</file>
		</sql>
	</uninstall>

	<update> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/update.sql</file>
			<file driver="mysqli" charset="utf8">sql/uninstall/mysql/update.sql</file>
		</sql>
	</update>
</extension>